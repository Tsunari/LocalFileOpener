{
    "manifest_version": 3,
    "name": "Local File Opener",
    "version": "1.0",
    "description": "Saves local files and opens them in the browser.",
    "permissions": [
      "tabs",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "file://*/*"
    ]
  }
  