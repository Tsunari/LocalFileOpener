{
    "manifest_version": 3,
    "name": "Local File Opener",
    "version": "1.0",
    "description": "Saves local files and opens them in the browser.",
    "permissions": [
        "tabs",
        "downloads",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "res/icon/icon-16.png",
            "48": "res/icon/icon-48.png",
            "128": "res/icon/icon-128.png"
        }
    },
    "icons": {
        "16": "res/icon/icon-16.png",
        "48": "res/icon/icon-48.png",
        "128": "res/icon/icon-128.png"
    },
    "host_permissions": [
        "file://*/*"
    ]
}
